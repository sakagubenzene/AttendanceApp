<div class="signin_form">
  <%= bootstrap_form_with(model: @user, local: true) do |f| %>
    <%= f.text_field :name, label: "氏名" %>
    <%= f.text_field :employee_number, label: "社員番号" %>
    <%= f.password_field :password, label: "パスワード" %>
    <%= f.password_field :password_confirmation, label: "パスワード確認" %>
    <%= f.submit yield(:button_text), class: "signin_button" %>
  <% end %>
</div>