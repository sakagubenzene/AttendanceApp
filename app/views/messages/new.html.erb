<h1>新規メッセージ</h1>
<%= form_with(model: @message, local: true) do |form| %>
  <div>
    <%= form.label :receiver_id, "受信者" %>
    <%= form.collection_select :receiver_id, User.all, :id, :name %>
  </div>
  <div>
    <%= form.label :content, "メッセージ内容" %>
    <%= form.text_area :content %>
  </div>
  <div>
    <%= form.submit "送信" %>
  </div>
<% end %>
