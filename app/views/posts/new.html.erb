<body id="new_attendance">

  <button id="begin_button" class="<%= 'disabled' if current_user.is_attending %>">出勤</button>
  <button id="finish_button" class="<%= 'disabled' unless current_user.is_attending %>">退勤</button>

  <div id="modal_overlay" class="modal-overlay"></div>

  <div id="begin_modal" class="modal">
    <%= render 'begin_popup' %>
  </div>

  <div id="finish_modal" class="modal">
    <%= render 'finish_popup' %>
  </div>
</body>
